	<select id="readReply" resultType="com.mypet.domain.ReplyVO">
	
		select 
			rno, reply, replyer, replyDate, updatedate 
			from tbl_reply 
			where f_no = #{f_no}
			order by rno asc
		
	</select>

	<insert id="writeReply">
	
		insert into tbl_reply(rno, f_no, reply, replyer)
		values (seq_reply.nextval, #{f_no}, #{reply}, #{replyer})
	</insert>
	
	<update id="updateReply">
	
		update tbl_reply 
		set reply = #{reply},updatedate = sysdate 
		where rno = #{rno} 
		
	</update>
	
	<delete id="deleteReply">
		delete from tbl_reply
		where rno = #{rno}
	</delete>

	<select id="selectReply" resultType="com.mypet.domain.ReplyVO">
		SELECT
				f_No, rno, reply, replyer
		FROM tbl_reply
		 
		WHERE rno = #{rno}
	</select>

